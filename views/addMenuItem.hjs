<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>GIU FoodTruck | Add Menu Item</title>

    <link rel="stylesheet" href="/styles/bootstrap.min.css" />
    <link rel="stylesheet" href="/styles/style.css" />

    <script src="/js/jquery-2.2.0.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/src/addMenuItem.js"></script>
  </head>

  <body class="auth-page">
    <!-- Owner Navbar -->
    <nav class="navbar navbar-inverse auth-navbar">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand auth-brand" href="/ownerDashboard">
            üöö GIU FoodTruck Owner
          </a>
        </div>

        <ul class="nav navbar-nav">
          <li><a href="/ownerDashboard">Dashboard</a></li>
          <li class="active"><a href="/menuItems">Menu Items</a></li>
          <li><a href="/truckOrders">Orders</a></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </nav>

    <!-- Dark header strip -->
    <div class="menu-header">
      <h2>‚ûï Add Menu Item</h2>
      <p>Create a new item for your menu</p>
    </div>

    <!-- Form Card -->
    <div class="container owner-container">
      <div class="add-item-card">
        <div class="add-item-icon">üçΩ</div>
        <h3 class="add-item-title">New Menu Item</h3>

        <div id="msg" class="alert" style="display:none; margin-bottom:15px;"></div>

        <form id="addItemForm">
          <div class="form-group">
            <label>Item Name *</label>
            <input
              id="name"
              class="form-control"
              placeholder="e.g. Beef Burger, Chicken Wrap..."
            />
          </div>

          <div class="form-group">
            <label>Category *</label>
            <input
              id="category"
              class="form-control"
              placeholder="e.g. Main Course, Sides, Drinks, Desserts..."
            />
          </div>

          <div class="form-group">
            <label>Description</label>
            <textarea
              id="description"
              class="form-control"
              rows="3"
              placeholder="Describe your delicious item..."
            ></textarea>
          </div>

          <div class="form-group">
            <label>Price ($) *</label>
            <input
              id="price"
              type="number"
              step="0.01"
              class="form-control"
              placeholder="0.00"
            />
          </div>

          <div class="add-item-actions">
            <button id="submit" type="submit" class="btn add-item-btn">
              ‚ûï ADD MENU ITEM
            </button>
            <a href="/menuItems" class="btn cancel-btn">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
