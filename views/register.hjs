<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>GIU FoodTruck | Register</title>

    <link rel="stylesheet" href="/styles/bootstrap.min.css" />
    <link rel="stylesheet" href="/styles/style.css" />

    <script src="/js/jquery-2.2.0.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/src/register.js"></script>
  </head>

  <body class="auth-page">
    <!-- Top Navbar -->
    <nav class="navbar navbar-inverse auth-navbar">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand auth-brand" href="/">
            <span class="auth-dot">üçü</span> GIU FoodTruck
          </a>
        </div>

        <ul class="nav navbar-nav navbar-right auth-navbtns">
          <li><a class="auth-pill" href="/">Login</a></li>
          <li class="active"><a class="auth-pill active" href="/register">Register</a></li>
        </ul>
      </div>
    </nav>

    <!-- Center Card -->
    <div class="auth-center">
      <div class="auth-card">
        <div class="auth-icon">üçî</div>
        <h2 class="auth-title">Join GIU FoodTruck</h2>
        <p class="auth-subtitle">Create your account to start ordering</p>

        <div id="msg" class="alert" style="display:none;"></div>

        <form id="registerForm" class="auth-form">
          <div class="form-group">
            <label class="auth-label" for="name">Full Name</label>
            <input
              id="name"
              name="name"
              type="text"
              class="form-control auth-input"
              placeholder="Enter your name..."
            />
          </div>

          <div class="form-group">
            <label class="auth-label" for="email">Email Address</label>
            <input
              id="email"
              name="email"
              type="text"
              class="form-control auth-input"
              placeholder="Enter your email..."
            />
          </div>

          <div class="form-group">
            <label class="auth-label" for="password">Password</label>
            <input
              id="password"
              name="password"
              type="password"
              class="form-control auth-input"
              placeholder="Create a password..."
            />
          </div>

          <div class="form-group">
            <label class="auth-label" for="birthDate">Birth Date</label>
            <input
              id="birthDate"
              name="birthDate"
              type="date"
              class="form-control auth-input"
            />
          </div>

          <button id="submit" type="submit" class="btn auth-btn btn-block">
            SIGN UP
          </button>

          <p class="auth-bottom text-center">
            Already have an account?
            <a class="auth-link" href="/">Login here</a>
          </p>
        </form>
      </div>
    </div>
  </body>
</html>
